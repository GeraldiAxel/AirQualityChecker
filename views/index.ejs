<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/main.css">
  <title>Air Quality Index</title>
</head>
<body>
    <div class="main-section">
        <div class="left-section">
            <div class="input-container">
                <form action="/" method="post">
                    <input type="text" name="city" id="city_input" autocomplete="off" placeholder="Search for cities" class="form-control">
                </form>
                <div class="result-section">
                    <div class="info">
                        <% if (locals.errorMessage) { %>
                            <div class="error">
                                <p><%= errorMessage %></p>
                            </div>
                        <% } else if(locals.cityName && locals.airQuality){ %>
                            <div class="content">
                                <h1 id="cityNameDisplay"><%= cityName %></h1>
                                <h5>Air Quality: <%= airQuality %></h5>
                                <div id="city-aqi-container-display"></div>
                            </div>
                        <% }%>
                    </div>
                </div>
            </div>
            <div class="today-forecast">
                <div id='map'></div>  
                <script src="https://maps.googleapis.com/maps/api/js"></script>
            </div>
        </div>
        <div class="right-section">
            <div class="seven-day-forecast">
                <% if (locals.weekly) { %>
                    <% for(let i = 0 ; i < weekly.length ; i++) { %>
                        <div class="daily">
                            pm10 Average: <%= weekly[i].avg %>, Date: <%= weekly[i].day %>
                        </div>
                        <% if(i !== weekly.length-1) { %>
                            <hr class="solid">
                        <% } %>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <script>
        let lat = '<%= location[0] %>';
        let long = '<%= location[1] %>';
        var map = new google.maps.Map(document.getElementById('map'), {  
            center: new google.maps.LatLng(lat, long),  
            mapTypeId: google.maps.MapTypeId.ROADMAP,  
            zoom: 7  
        });

        var t = new Date().getTime();  
        var waqiMapOverlay =  new google.maps.ImageMapType({  
            getTileUrl: function(coord, zoom) {  
                return 'https://tiles.aqicn.org/tiles/usepa-aqi/' + zoom + "/" + coord.x + "/" + coord.y + ".png?token=_TOKEN_ID_";  
            },
            name: "Air Quality",  
        });  

        map.overlayMapTypes.insertAt(0,waqiMapOverlay);  
    </script>
    <script type="text/javascript">
        (function(w,d,t,f){
            w[f]=w[f]||function(c,k,n){
                s=w[f],k=s['k']=(s['k']||(k?('&k='+k):''));
                s['c']=c=(c instanceof Array)?c:[c];
                s['n']=n=n||0;
                L=d.createElement(t),e=d.getElementsByTagName(t)[0];
                L.async=1;
                L.src='//feed.aqicn.org/feed/'+(c[n].city)+'/'+(c[n].lang||'')+'/feed.v1.js?n='+n+k;
                e.parentNode.insertBefore(L,e);
            };
        })(window, document, 'script', '_aqiFeed');

        _aqiFeed({
            display: "<div style='%style;max-width:180px;text-align:center;'><small>%cityname AQI:</small> <div style='font-size:88px;height:140px;'>%aqiv</div> %impact</div>",
            container: "city-aqi-container-display",
            city: '<%= cityForMap %>'
        });
    </script>
</body>
</html>