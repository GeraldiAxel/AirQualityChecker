<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/main.css">
  <title>Air Quality Index</title>
</head>
<body>
    <div class="main-section">
        <div class="left-section">
            <div class="input-container border">
                <form action="/" method="post">
                    <input type="text" name="city" id="city_input" autocomplete="off" placeholder="Search for cities" class="form-control">
                </form>
                <div class="result-section">
                    <div class="info">
                        <% if (locals.errorMessage) { %>
                            <div class="error">
                                <p><%= errorMessage %></p>
                            </div>
                        <% } else if(locals.cityName && locals.airQuality){ %>
                            <div class="content">
                                <h1><%= cityName %></h1>
                                <p>Air Quality: <%= airQuality %></p>
                            </div>
                        <% }%>
                    </div>
                    <div class="image">

                    </div>
                    
                </div>
            </div>
            <div class="today-forecast">
                <div id='map'></div>  
                <script src="https://maps.googleapis.com/maps/api/js"></script>
            </div>
        </div>
        <div class="right-section">
            <div class="seven-day-forecast">
                <% if (locals.weekly) { %>
                    <% for(let i = 0 ; i < weekly.length ; i++) { %>
                        <div class="daily">
                            Air Quality: <%= weekly[i].avg %>, Date: <%= weekly[i].day %>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <script>
        var map = new google.maps.Map(document.getElementById('map'), {  
            center: new google.maps.LatLng(0.7893, 113.9213),  
            mapTypeId: google.maps.MapTypeId.ROADMAP,  
            zoom: 5  
        });

        var t = new Date().getTime();  
        var waqiMapOverlay =  new google.maps.ImageMapType({  
            getTileUrl: function(coord, zoom) {  
                return 'https://tiles.aqicn.org/tiles/usepa-aqi/' + zoom + "/" + coord.x + "/" + coord.y + ".png?token=_TOKEN_ID_";  
            },
            name: "Air Quality",  
        });  

        map.overlayMapTypes.insertAt(0,waqiMapOverlay);  
    </script>
</body>
</html>