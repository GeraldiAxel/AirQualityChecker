<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Air Quality Checker</title>
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <div class="prompt">
        <form action="/" method="post">
            <label for="text">City:</label>
            <input type="text" name="city" id="">
            <button type="submit">Submit</button>
        </form>
        <% if (locals.errorMessage) { %>
            <div class="error">
                <p><%= errorMessage %></p>
            </div>
        <% } else if(locals.cityName && locals.airQuality){ %>
            <div class="content">
                <p>City Name: <%= cityName %></p>
                <p>Air Quality: <%= airQuality %></p>
            </div>
        <% } else {%>
            <div class="content">
                <p>Enter a city name!</p>
            </div>
        <% } %>
    </div>
    <div id='map'></div>  
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        var map = new google.maps.Map(document.getElementById('map'), {  
            center: new google.maps.LatLng(0.7893, 113.9213),  
            mapTypeId: google.maps.MapTypeId.ROADMAP,  
            zoom: 5  
        });

        var t = new Date().getTime();  
        var waqiMapOverlay =  new google.maps.ImageMapType({  
            getTileUrl: function(coord, zoom) {  
                return 'https://tiles.aqicn.org/tiles/usepa-aqi/' + zoom + "/" + coord.x + "/" + coord.y + ".png?token=_TOKEN_ID_";  
            },
            name: "Air Quality",  
        });  

        map.overlayMapTypes.insertAt(0,waqiMapOverlay);  
    </script>
</body>
</html>